<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MobileAttendanceApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Warna Global -->
            <Color x:Key="PrimaryColor">#007AFF</Color>
            <Color x:Key="SecondaryColor">#FFFFFF</Color>
            <Color x:Key="PlaceholderColor">Gray</Color>

            <!-- Gaya Global -->
            <Style TargetType="Label">
                <Setter Property="FontSize" Value="Medium" />
                <Setter Property="TextColor" Value="Black" />
            </Style>

            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
                <Setter Property="TextColor" Value="{StaticResource SecondaryColor}" />
                <Setter Property="FontSize" Value="Medium" />
            </Style>

            <Style TargetType="Entry">
                <Setter Property="PlaceholderColor" Value="{StaticResource PlaceholderColor}" />
                <Setter Property="FontSize" Value="Medium" />
            </Style>

            <Style TargetType="ActivityIndicator">
                <Setter Property="Color" Value="{StaticResource PrimaryColor}" />
            </Style>

            <Style TargetType="Frame">
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="HasShadow" Value="True" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
<UseMaui>true</UseMaui>
<TargetFrameworks>net8.0-android;net8.0-windows</TargetFrameworks>