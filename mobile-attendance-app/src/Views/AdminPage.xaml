<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAttendanceApp.Views.AdminPage"
             Title="Admin Page">

    <StackLayout Padding="10">
        <Label Text="Attendance Records"
               FontSize="24"
               HorizontalOptions="Center" />

        <ListView x:Name="AttendanceListView"
                  ItemsSource="{Binding AttendanceRecords}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Vertical" Padding="5">
                            <Label Text="{Binding UserId}" FontSize="18" />
                            <Label Text="{Binding Timestamp}" FontSize="14" />
                            <Image Source="{Binding SelfieImage}" HeightRequest="100" />
                            <Label Text="{Binding Location.Latitude}, {Binding Location.Longitude}" FontSize="14" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="Refresh Records"
                Command="{Binding RefreshCommand}" 
                HorizontalOptions="Center" 
                VerticalOptions="End" />
    </StackLayout>
</ContentPage>